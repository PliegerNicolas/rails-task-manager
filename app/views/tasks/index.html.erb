
<div class="page">
  <h1>My Tasks</h1>

  <div class="task-list">
    <% @tasks.each do |task| %>
    <div class="task">

      <div class="task-checker">
        <% if task.completed == true %>
          <%= link_to update_path(task) do %>
            <i class="fa fa-check"></i>
          <% end %>
        <% else %>
          <%= link_to update_path(task) do %>
            <i class="fa fa-times"></i>
          <% end %>
        <% end %>
      </div>

      <div class="task-title">
        <%= link_to "#{task.title}", show_path(task) %>
      </div>

      <div class="right-hand-icones">
        <div class="trash">
          <%= link_to update_path(task) do %>
          <i class="fa fa-edit"></i>
          <% end %>
        </div>

         <div class="trash">
          <%= link_to delete_path(task), method: :delete do %>
            <i class="fa fa-trash"></i>
          <% end %>
        </div>
      </div>

    </div>
  <% end %>
  </div>

  <hr>

  <%= link_to "Add a new task", new_path, class: "button" %>
</div>
