
<div class="page">
  <h1>My Tasks</h1>

  <div class="task-list">                    <!-- list -->
    <% @tasks.each do |task| %>
    <div class="task">

      <div class="click-box">                  <!-- checker -->
        <% if task.completed == true %>
          <i class="fa fa-check"></i>
        <% else %>
          <i class="fa fa-times"></i>
        <% end %>
      </div>

      <div class="task-title">                  <!-- name -->
        <%= link_to "#{task.title}", show_path(task) %>
      </div>

      <div class="click-box">                     <!-- trash icone -->
         <div class="trash">
          <%= link_to delete_path(task), method: :delete do %>
            <i class="fa fa-trash"></i>
          <% end %>
        </div>
      </div>

    </div>
  <% end %>
  </div>

  <hr>

  <%= link_to "Add a new task", new_path, class: "button" %>
</div>
